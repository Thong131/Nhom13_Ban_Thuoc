<div class="container">
   

    <div class="card shadow-lg">
        <h2 class="text-center mb-4">Quản lý thông tin cá nhân</h2>
        <div class="card-body">
            @using (Html.BeginForm("Profile", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.hoTen, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.hoTen, new { @class = "form-control", placeholder = "Nhập họ tên" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control", placeholder = "Nhập email" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.sdt, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.sdt, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                </div>

                <button type="submit" class="btn btn-primary w-100">Cập nhật</button>

                if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-3">@ViewBag.Message</div>
                }

                if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }
            }
        </div>
    </div>
</div>

