
@model IEnumerable<GameStore.Models.SanPham>
@{
    ViewBag.Title = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!----all products------>
<div class="container">
    <h2 class="title">TẤT CẢ SẢN PHẨM</h2>
    <div class="row mb-2">

        @foreach (var item in Model.Take(4))
        {
            <div class="col-3 mt-2 card-product">
                <a href="/games/ChiTietSP/@item.maSP">
                    <img class="img-product" src="~/UploadFile/@item.hinhAnh1">
                    <div class="name-product">@item.tenSP</div>
                    <div class="price-product">Giá: @item.giaTien,000 VNĐ</div>
                </a>
            </div>
        }


    </div>
    <br style="height:100px" />
    <div>
        <h2 style="justify-content:center;margin:auto;text-align:center">Sản Phẩm Bán Chạy</h2>

        <div class="row">
            @foreach (var item in Model.OrderByDescending(sp => sp.soLuong).Take(2))
            {
                <div class="col-3 mt-2 card-product">
                    <a href="/games/ChiTietSP/@item.maSP">
                        <img class="img-product" src="~/UploadFile/@item.hinhAnh1" alt="@item.tenSP">
                        <div class="name-product">@item.tenSP</div>
                        <div class="price-product">Giá: @item.giaTien,000 VNĐ</div>
                    </a>
                </div>
            }
        </div>
    </div>
    <br style="height:100px" />
    <br style="height:100px" />

</div>